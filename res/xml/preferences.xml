        </PreferenceCategory>
        
        <!-- About -->
        
        <PreferenceCategory
            android:title="@string/about_title">
            <Preference
                android:key="build_version"
                android:title="@string/version_title"
                android:summary="@string/version_summary">
            <intent 
	        android:action="android.intent.action.VIEW"
	        android:data="https://github.com/vishal0071/Green_Day_Lyrics/releases"/>
		        <!-- intent to open class
		        android:targetPackage="com.greenday.lyrics"
		        android:targetClass="com.greenday.lyrics.Allsongs"  -->
			</Preference>
            
            <Preference
                android:key="source"
                android:title="@string/source_title"
                android:summary="@string/source_summary">
	            <intent android:action="android.intent.action.VIEW"
	                    android:data="https://github.com/vishal0071/Green_Day_Lyrics"/>
            </Preference>
            
            <Preference android:key="changelog"
                android:title="@string/changelog_title"
                android:summary="@string/changelog_summary"/>
            
            </PreferenceCategory>
            
            <!-- Extras -->
      <PreferenceCategory android:title="@string/extras_title">
          
          
          <SwitchPreference android:key="scroll"
              android:title="@string/scroll_title"
              android:summaryOn="@string/scroll_summary_on"
              android:summaryOff="@string/scroll_summary_off"
              android:defaultValue="false" />
          <CheckBoxPreference android:key="display"
              android:title="@string/display_title"
              android:summaryOn="@string/display_summary_on"
              android:summaryOff="@string/display_summary_off"
              android:defaultValue="false" />
          <CheckBoxPreference android:key="touch"
              android:title="@string/touch_title"
              android:summaryOn="@string/touch_summary_on"
              android:summaryOff="@string/touch_summary_off"
              android:defaultValue="false" />
            <Preference android:key="store"
                android:title="@string/store_title"
                android:summary="@string/store_summary">
                <intent android:action="android.intent.action.VIEW"
                    android:data="http://www.bravadousa.com/greenday/"/>
            </Preference>
            <Preference android:key="donate"
                android:title="@string/donate_title"
                android:summary="@string/donate_summary">
                <intent android:action="android.intent.action.VIEW"
                    android:data="market://details?id=com.greenday.lyrics_donate"/>
            </Preference>
            
            <Preference
	                android:title="@string/rate_title"
	                android:summary="@string/rate_summary">
	            <intent android:action="android.intent.action.VIEW"
	                    android:data="market://details?id=com.greenday.lyrics"/>
	        </Preference>
            
            <Preference android:key="disclaimer"
                android:title="@string/disclaimer_title"/>
            
            <Preference android:key="license"
                android:title="@string/license_title"/>
      </PreferenceCategory>
        
</PreferenceScreen>
