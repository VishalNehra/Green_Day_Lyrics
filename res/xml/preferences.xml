<?xml version="1.0" encoding="utf-8"?>

    <PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
        
        <!-- Theme -->
        <PreferenceCategory android:title="@string/theme_title">
            <ListPreference android:title="@string/themechooser_title"
                android:dialogTitle="@string/themechooser_dialog"
                android:key="themechooser"
                android:entries="@array/themes_list"
                android:entryValues="@array/themes_value" />
                
        </PreferenceCategory>
        
